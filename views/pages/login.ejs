<!DOCTYPE html>
<html lang="en">

<%- include("../patrials/head") %>

    <body class="desfocar">
        <center>
            <div class="page-box">
                <br><br><br><br>
                <h1>Logar</h1>
                <% if (mensagem) { %>
                    <p style="color:#000000;">
                        <%= mensagem %>
                    </p>
                    <% } %>
                        <main>
                            <form action="/login" method="POST" class="formItens">
                                <table>
                                    <tr>
                                        <td><input type="text" name="nomecompleto" placeholder="Nome Completo" required>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><input type="email" name="email" placeholder="Email" required></td>
                                    </tr>
                                    <tr>
                                        <td><input type="password" name="senha" placeholder="Senha" required></td>
                                    </tr>
                                    <tr>
                                        <td><input type="password" name="confirmarsenha" placeholder="Confirmar Senha"
                                                required></td>
                                    </tr>
                                </table>
                                <button type="submit">CONFIRMAR</button><br><br>
                            </form>
                        </main>
            </div>
            <a href="/"><button type="submit">VOLTAR</button></a><br><br>
        </center>
        <%- include("../patrials/footer") %>
    </body>

</html>